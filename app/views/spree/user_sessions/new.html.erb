<div class="login-form text-center">
  <h4>¿Qué tipo de usuario eres?</h4>

  <div class="row log-section">
    <div class="col-md-4 col-md-offset-2">
      <div class="rounded-blue">
        <i class="fa fa-user-plus" aria-hidden="true"></i>
      </div>
      <h1>CONSUMIDOR</h1>
      <div id="big-form" class="auth-box">
        <h5 class="text-center">Encuentra tu tienda más cercana</h5>
        <!-- Button trigger modal -->
        <br>
        <br>
        <button type="button" class="btn btn-primary btn-lg cities-button" data-toggle="modal" data-target="#myModal">
          Medellín
        </button>
        <br>
        <button type="button" class="btn btn-primary btn-lg cities-button" data-toggle="modal" data-target="#myModal">
          Medellín
        </button>
        <br>
        <button type="button" class="btn btn-primary btn-lg cities-button" data-toggle="modal" data-target="#myModal">
          Medellín
        </button>
        <br>
        <button type="button" class="btn btn-primary btn-lg cities-button" data-toggle="modal" data-target="#myModal">
          Medellín
        </button>
        <br>
        <br>
        <%= link_to 'CONTACTO SUMEL', {}, class: 'contact-sumel' %>
        <br>
        <br>
        <br>
        <%= link_to 'VER TODOS LOS PRODUCTOS', {}, class: 'products-sumel' %>
        <br>
        <br>
        <br>
      </div>
      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title" id="myModalLabel">Medellín</h4>
            </div>
            <div class="modal-body">
              <div id="map">
                <iframe width="100%" height="350" frameborder="0" style="border:0"
                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDlbJ_XRVze2LtvaIBXH8Libsn6c6PWU1Q
                  &q=Sumel+Medellin" allowfullscreen>
              </iframe>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="rounded-blue" >
        <i class="fa fa-users" aria-hidden="true"></i>
      </div>
      <h1>CLIENTE ACTIVO</h1>
      <div id="big-form" class="auth-box">
        <%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
          <fieldset>
            <h5 class="text-center">Ingrese a continuación su información personal</h5>
            <br>
            <!-- Text input-->
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control input-md login-input', tabindex: 1, placeholder: 'Usuario' %>
            </div>

            <!-- Password input-->
            <div class="form-group">
              <div class="">
                <%= f.password_field :password, class: 'form-control input-md login-input', tabindex: 2, placeholder: 'Contraseña' %>
              </div>
            </div>
            <br>
            <div class="form-group" style="margin-right: 58px;">
              <%= f.submit 'INGRESAR', class: 'btn btn-lg btn-success btn-block button-fixed', tabindex: 3 %>
            </div>
            <div class="form-group forgot-password-div text-right">
              <%= link_to '¿Olvidó su contraseña?', spree.recover_password_path, class: 'forget-a' %>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>  
</div>


