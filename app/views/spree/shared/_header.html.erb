<div id="spree-header fixed-margin">
  <nav class="top_panel  hidden-sm hidden-xs">
    <div class="panel-container">
      <div class="navbar-text navbar-left social-icons">
        <div class="navbar-text navbar-left">
          <i class="fa fa-facebook" aria-hidden="true"></i>
        </div>
        <div class="navbar-text navbar-left">
          <i class="fa fa-twitter" aria-hidden="true"></i>
        </div>
        <div class="navbar-text navbar-left">
          <i class="fa fa-instagram" aria-hidden="true"></i>
        </div>
    </div> 
      <div class="topPanelnavRight">
        <% if spree_current_user %>
          <a href="/cart" data-hook class="navbar-right add-car" id="link-to-cart"> Add to cart</a>
          <script>Spree.fetch_cart()</script>
          <a href="#"></a>
