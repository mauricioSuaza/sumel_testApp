            <%= render partial: 'spree/shared/search' %>
          </div>
          <%= link_to 'Ingrese', spree.login_path, :class => "navbar-text navbar-right" %>
          <%= link_to "Regístrese", spree.signup_path, :class => "navbar-text navbar-right registrese-button" %>
