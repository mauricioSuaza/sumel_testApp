    <style>
      body{
        line-height: 1.2;
      }
      /*NAVBAR STYLES FOR TABLETS*/
      @media (max-width: 1000px) {
        .navbar-header {
            float: none;
        }
        .navbar-left,.navbar-right {
            float: none !important;
        }
        .navbar-toggle {
            display: block;
        }
        .navbar-collapse {
            border-top: 1px solid transparent;
            box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
        }
        .navbar-fixed-top {
            top: 0;
            border-width: 0 0 1px;
        }
        .navbar-collapse.collapse {
            display: none!important;
        }
        .navbar-nav {
            float: none!important;
            margin-top: 7.5px;
        }
        .navbar-nav>li {
            float: none;
        }
        .mobile-toggle{
          background: white !important;
          margin-top: 23px !important;
        }

        .mobile-toggle span{
          background: grey ;
        }

        .navbar-content{
          background: black;
        }

        .navbar-content li a{
          color: white;
          text-align: center;
        }
        .navbar-nav>li>a {
            padding-top: 10px;
            padding-bottom: 10px;
        }
        .collapse.in{
            display:block !important;
        }

        .center{
          text-align: center;
        }

        .single-footer-widget {
          float: none;
          margin-top: 40px;
        }
      }
      @media (max-width: 764px) {
        .infoText {
          padding-left: 10px;
          padding-right: 10px;
        }
      }
      .flash-messages-all .alert{
        background-color: #dff0d8;
        border: 1px solid white;
        color: #3c763d;
        text-align: center;
        margin-bottom: 0;
        width: 100%;
        margin: 0 auto;
        position: absolute;
        transform: translateX(-50%);
        left: 50%;
        background: black;
        color: white;"
      }
    </style>
  </head>

